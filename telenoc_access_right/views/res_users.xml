<odoo>
    <data>

<!--        add group to limit import in contacts-->
        <record model="res.groups" id="group_import_contracts">
                <field name="name">Import contacts</field>
        </record>

<!--        inherit users form to limit create,view,edit,delete contacts-->
        <record id="view_users_form_inherit" model="ir.ui.view">
            <field name="name">res.users</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="inside">
                    <page string="Extra Access">
                        <group string="Contact access right">
<!--                            <field name="is_allowed_to_create" />-->
                            <field name="no_contact_create" />
                            <field name="is_allowed_to_view_own_contacts" />
                            <field name="is_allowed_to_edit" />
                            <field name="is_allowed_to_delete" />
<!--                            <field name="is_allowed_to_import" />-->
<!--                            <field name="is_allowed_to_export" />-->
                        </group>
                    </page>

                </xpath>

            </field>
        </record>

<!--        inherit partner form to limit import contacts-->
        <record id="res_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="99"/>
            <field name="groups_id"
               eval="[(4, ref('telenoc_access_right.group_import_contracts'))]"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="import">false</attribute>
                </xpath>
            </field>
        </record>

<!--        inherit partner tree to limit import contacts-->
        <record id="view_partner_tree_inherit" model="ir.ui.view">
            <field name="name">res.partner</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="priority" eval="99"/>
            <field name="groups_id"
               eval="[(4, ref('telenoc_access_right.group_import_contracts'))]"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="import">false</attribute>
                </xpath>
            </field>
        </record>

<!--        inherit partner kanban to limit import contacts-->
        <record id="res_partner_kanban_view_inherit" model="ir.ui.view">
            <field name="name">res.partner</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="priority" eval="99"/>
            <field name="groups_id"
               eval="[(4, ref('telenoc_access_right.group_import_contracts'))]"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban" position="attributes">
                    <attribute name="import">false</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>